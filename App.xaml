<?xml version="1.0" encoding="UTF-8" ?>
<Application x:Class="PackageTracker.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Cores -->
            <Color x:Key="PrimaryColor">#2E86AB</Color>
            <Color x:Key="SecondaryColor">#A23B72</Color>
            <Color x:Key="PageBackgroundColor">#F8F9FA</Color>
            <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
            <Color x:Key="CardBorderColor">#E9ECEF</Color>
            <Color x:Key="PrimaryTextColor">#212529</Color>
            <Color x:Key="SecondaryTextColor">#6C757D</Color>
            <Color x:Key="EntryBackgroundColor">#FFFFFF</Color>
            <Color x:Key="StatusBackgroundColor">#E8F4FD</Color>
            <Color x:Key="StatusBorderColor">#B8D9F0</Color>
            <Color x:Key="InfoBackgroundColor">#F8F9FA</Color>
            <Color x:Key="EventBackgroundColor">#FFFFFF</Color>
            <Color x:Key="EventBorderColor">#E9ECEF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>